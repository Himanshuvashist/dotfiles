# FOR BASH
# Show git branch in prompt

#in non-interactive shell only the /etc/bash.bashrc file execute
#in interactive shell both the /etc/profile and /etc/bash.bashrc execute

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[01;00m\]\$(parse_git_branch)\[\033[00m\] $ "



